generator client {
  provider = "prisma-client"
  output   = "../prisma/generated"
}

datasource db {
  provider = "mysql"
}

model Group {
  id         Int      @id @default(autoincrement())
  group_name String
  arrival    DateTime
  departure  DateTime

  persons Person[]
}

model Person {
  id              Int     @id @default(autoincrement())
  group_id        Int
  name            String
  age             Int?
  gender          Gender?
  national_id_num String?
  mail            String?
  phone           String?
  allergies       String?

  group Group @relation(fields: [group_id], references: [id], onDelete: Cascade)
}

enum Gender {
  male
  female
  other
}
