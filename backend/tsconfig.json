{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules"]
}
